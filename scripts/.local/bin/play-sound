#!/bin/bash

case "$1" in
    charging)
        paplay /usr/share/sounds/freedesktop/stereo/message.oga
        ;;
    discharging)
        paplay /usr/share/sounds/freedesktop/stereo/dialog-warning.oga
        ;;
    *)
        paplay /usr/share/sounds/freedesktop/stereo/dialog-information.oga
        ;;
esac
